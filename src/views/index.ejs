<div class="contenedor-series-recomendadas">
    <div id="carouselExampleCaptions" class="carousel slide">
        
        <% if (informacion) { %>
            <div class="carousel-indicators">
            <% for (let i = 0 ; i < informacion.length ; i++) { %>
                    <% if (i == 0) { %>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="<%= i %>" 
                        class="active" aria-current="true" aria-label="Slide <%= i + 1%>">
                    </button>
                    <% } else { %>
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="<%= i %>" 
                            aria-label="Slide <%= i + 1 %>">
                        </button>
                    <% } %>
            <% } %>
            </div>
            <div class="carousel-inner">
            <% for( let i = 0; i < informacion.length ; i++) { %>
                    <% if (i == 0) { %>
                        <div class="carousel-item active">
                            <img src="<%= informacion[i].poster %>"" class="d-block w-100" alt="...">
                            <div class="carousel-caption d-none d-md-block">
                                <p class="contenedor-sinopsis-recomendadas"><%= informacion[i].descripcion %></p>
                                <a href="/watch/<%= informacion[i].idSerie %>" class="boton-info">Ver serie</a>
                            </div>
                        </div>
                    <% } else { %>
                        <div class="carousel-item">
                            <img src="<%= informacion[i].poster %>"" class="d-block w-100" alt="...">
                            <div class="carousel-caption d-none d-md-block">
                                <p class="contenedor-sinopsis-recomendadas"><%= informacion[i].descripcion %></p>
                                <a href="/watch/<%= informacion[i].idSerie %>" class="boton-info">Ver serie</a>
                                </button>
                            </div>
                        </div>
                    <% } %>
                <% } %>
            </div>
        <% } %>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
</div>
</div>
<div class="contenedor-series">
    <h2 class="titulo-series">Series</h2>
    <div class="contenedor-posters-series">

        <% for( let i = 0; i < serie.length; i++ ) { %>
            <a href="/watch/<%= serie[i].idSerie %>">
                <img src="<%= serie[i].poster %>" 
                srcset="
                <%= serie[i].posterMobile %> 320w, 
                <%= serie[i].posterMobile %> 480w,
                <%= serie[i].posterMobile %> 640w,
                <%= serie[i].posterMobile %> 768w,
                <%= serie[i].posterMobile %> 1024w,
                <%= serie[i].poster %> 1200w, 
                <%= serie[i].poster %> 1440w
                sizes="(max-width: 600px) 100vw, 800px"
                >
            </a> 
        <% } %>
    </div>
</div>

